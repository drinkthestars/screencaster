{
  "manifest_version": 2,

  "name": "Screen Chromecast",
  "description": "Inject cast script on screen",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://screen.yahoo.com/*"],
      "js": ["popup.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["helloVid.js"],
  "browser_action": {
    "default_icon": "icon.png"
  }
}